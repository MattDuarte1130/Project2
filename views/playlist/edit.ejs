<%-include('../partials/header.ejs') %>
<div class="containerNew">
    <h1>Create Playlist</h1>
    <form method="POST" action="/playlist/<%=idForPlaylist%>?_method=PUT">
      <fieldset class="playlistInfo">
        <legend>Playlist Infromation</legend>
          <label for="title">Title</label>
          <input type="text" id="title" value=<%=idOfPlaylistToEdit.title%>/>
          <label for="description">Description</label>
          <input type="text" id="description" value=<%=idOfPlaylistToEdit.description%>>
          <label for="img">Image URL</label>
          <input type="text" id="img" value=<%=idOfPlaylistToEdit.img%> />
      </fieldset>
      <input type="submit" name= "" value="Update Playlist">
    </form>
</div>
