<%-include('../partials/header.ejs') %>
<nav>
    <a href="/playlist">Playlists</a> |
    <a href="/playlist/new">Create A New Playlist</a> |
    <a href="/playlist/<%=playlist.id%>/video/add">Add Video</a> |
    <% if (currentUser) { %>
    Welcome <%= currentUser.username %>
      <form action="/sessions?_method=DELETE" method="POST">
        <input type="submit" value="Log Out"/>
      </form>
    <% } else { %>
      <button type="button" name="button"><a href="/users/new">Sign Up</a></button>
      <button type="button" name="button"><a href="/sessions/new">Log In</a></button>
    <% } %>
</nav>
<div class="container">
<h1>Video Show Page</h1><ul>
    <% for(let i = 0; i < playlist.videoLink.length; i++){ %>
      <div class="itemContainer">
      <li>
        <h3> <%=playlist.videoTitle[i]; %> </h3>
        <h5> Description: <%=playlist.videoDescription[i]; %> </h5>
        <iframe width="640" height="360" src="https://www.youtube.com/embed/<%=playlist.videoLink[i]; %> " frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </li>
        </div>
    <% } %>

</ul>
<%-include('../partials/footer.ejs') %>
</div>
